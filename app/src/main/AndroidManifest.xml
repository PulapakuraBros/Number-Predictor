<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="number.predictor.app">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name="number.predictor.app.App_Globals"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MagicNumbersV1"
        android:configChanges="keyboardHidden|orientation|screenSize">
        <activity android:name="number.predictor.app.Pre_game"/>
        <activity android:name="number.predictor.app.Instructions_step3" />
        <activity android:name="number.predictor.app.Instructions_step2" />
        <activity android:name="number.predictor.app.Result"/>
        <activity android:name="number.predictor.app.Card5" />
        <activity android:name="number.predictor.app.Card4"/>
        <activity android:name="number.predictor.app.Card3"/>
        <activity android:name="number.predictor.app.Card2"/>
        <activity android:name="number.predictor.app.Card1" />
        <activity android:name="number.predictor.app.Instructions_step1" android:configChanges="uiMode" />
        <activity android:name="number.predictor.app.Homescreen" />
        <activity android:name="number.predictor.app.Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>